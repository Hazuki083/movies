<h1>New movie</h1>

<%= form_with model: movie, local:true do |f| %>

<div class="form-group">
<%= f.label :title, "Title" %>
<%= f.text_field :title, class: 'form-control movie_title' %>
</div>

<div class="form-group">
<%= f.label :body, "Opinion" %>
<%= f.text_field :body, class: 'form-control movie_body' %>
</div>

<div class="form-group">
<%= f.submit 'Create!', class: "btn btn-primary" %>
</div>
<% end %>

